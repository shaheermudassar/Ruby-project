<%= tinymce %>
<%= form_with scope: :article, url: articles_path, local: true do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field mb-3">
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title, autofocus: true, class: "form-control form-control-lg", required: true %>
  </div>

  <div class="field mb-3">
    <%= form.label :description, class: "form-label", style: "display: block;" %><br>
    <%= form.text_area :description, class: "tinymce form-control form-control-lg", size: "70x15" %>
  </div>

  <div class="field mb-3">
    <%= form.label "Upload Image in JPG/PNG/JPEG format", class: "form-label" %><br>
    <%= form.file_field :image, class: "form-control form-control-lg" %>
  </div>

  <div class="field mb-3">
    <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>




