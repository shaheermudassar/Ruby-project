<%= form_with(model: [ suggestion, suggestion.replies.build ]) do |form| %>
  <div class="field mb-3">
    <%= form.text_field :body, class: "form-control form-control-sm mx-5", placeholder: "Reply", required: true %>
    <%= form.submit 'Reply', class: "btn btn-primary btn-sm mx-5 mt-3" %>
  </div>
<% end %>
